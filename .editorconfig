# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{js,ts,jsx,tsx}]
indent_size = 2

[*.{html,css,scss}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 100

[*.toml]
indent_size = 2

[*.sh]
indent_size = 2

[Dockerfile*]
indent_size = 2

[Makefile]
indent_style = tab

[*.{gds,spi,cir}]
# Photonic design files - preserve formatting
trim_trailing_whitespace = false
insert_final_newline = false