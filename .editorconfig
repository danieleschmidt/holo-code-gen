root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json,js,ts}]
indent_size = 2

[*.{md,txt}]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{gds,spi,cdl}]
# Circuit design files
indent_style = space
indent_size = 2

[*.py]
max_line_length = 88
indent_size = 4

[*.toml]
indent_size = 2

[*.ini]
indent_size = 2

[*.cfg]
indent_size = 2